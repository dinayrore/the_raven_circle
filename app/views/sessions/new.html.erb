<%= render 'layouts/navigation' %>

<% provide(:title, "Login to Raven's World") %>

<div class="authform">
  <%= form_for(:session, url: login_path) do |f| %>
    <h3>Login</h3>

      <%= link_to 'Sign up', signup_path, class: 'pull-right'  %>
      <%= f.label :email, class: 'pull-left' %>
      <%= f.email_field :email, :autofocus => true, class: 'form-control' %><br>

      <%= f.label :password, class: 'pull-left' %>
      <%= link_to "Forgot Password?", new_password_reset_path, class: 'pull-right' %>
      <%= f.password_field :password, class: 'form-control' %><br>

      <%= f.submit 'Sign in', class: 'button pull-right' %>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me</span>
      <% end %>
  <% end %>
</div>
