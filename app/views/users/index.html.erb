<div class="container">
    <div class="row">
        <div class="box">
            <div class="col-lg-12">
              <hr class="tagline-divider">
              <h2 class="intro-text text-center">Existing
                  <strong>Users</strong>
              </h2>
              <hr class="tagline-divider">
              <div class="col-lg-12">
                  <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody>
                      <% @users.each do |user| %>
                        <tr>
                          <td><%= user.name %></td>
                          <td><%= user.email %></td>
                          <td>
                            <%= link_to("Delete user", user_path(user), :data => { :confirm => "Are you sure?" }, :method => :delete, class: 'btn-danger button-xs') unless user == current_user %>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
            </div>
        </div>
    </div>
</div>
